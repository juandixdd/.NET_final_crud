@model IEnumerable<WebApplication1.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>
<hr />



<p>
    <a asp-action="CreateClient">Create New</a>
</p>
<table id="example" class="table table-dark table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @if(item.status == 1)
                    {
                        <button type="button" class="btn btn-success">Activo</button>
                    }
                    @if(item.status == 0)
                    {
                        <button type="button" class="btn btn-danger">Inactivo</button>  
                    }
            </td>
            <td>
                <button asp-action="EditClients" type="button" class="btn btn-secondary" ><a asp-action="EditClients" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Editar</a></button>
                <button asp-action="DetallesCliente" type="button" class="btn btn-secondary" ><a asp-action="DetallesCliente" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Ver detalle</a></button>
                <button asp-action="DeleteClient" type="button" class="btn btn-secondary" ><a asp-action="DeleteClient" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Eliminar</a></button>

            </td>
        </tr>
}
    </tbody>
</table>



