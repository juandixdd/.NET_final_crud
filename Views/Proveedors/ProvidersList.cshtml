@model IEnumerable<WebApplication1.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Proveedores</h1>
<hr />

<p>
    
    <button asp-action="CreateProvider" type="button" class="btn btn-secondary" ><a asp-action="CreateProvider" style="text-decoration: none; color: white;">Agregar</a></button>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                    @if(item.status == 1)
                    {
                        <button type="button" class="btn btn-success">Activo</button>
                    }
                    @if(item.status == 0)
                    {
                        <button type="button" class="btn btn-danger">Inactivo</button>  
                    }

            </td>
            <td>

                <button asp-action="EditProvider" type="button" class="btn btn-secondary" ><a asp-action="EditProvider" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Editar</a></button>
                <button asp-action="DetailsProvider" type="button" class="btn btn-secondary" ><a asp-action="DetailsProvider" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Ver detalle</a></button>
                <button asp-action="DeleteProvider" type="button" class="btn btn-secondary" ><a asp-action="DeleteProvider" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Eliminar</a></button>

            </td>
        </tr>
}
    </tbody>
</table>
